@model Website_BanMayTinh.Models.Product

@{
    ViewData["Title"] = "Xóa sản phẩm";
    Layout = "~/Views/Shared/_MyLayout.cshtml";
}

<div class="container mt-4">
    <div class="card border-danger shadow-sm">
        <div class="card-header bg-danger text-white">
            <h4 class="mb-0"><i class="bi bi-exclamation-triangle-fill"></i> Xác nhận xóa sản phẩm</h4>
        </div>
        <div class="card-body">
            <h5 class="text-danger fw-bold">Bạn có chắc chắn muốn xóa sản phẩm này không?</h5>
            <hr />
            <dl class="row">
                <dt class="col-sm-3">Tên sản phẩm</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Name)</dd>

                <dt class="col-sm-3">Giá</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Price) VNĐ</dd>

                <dt class="col-sm-3">Mô tả</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Description)</dd>

                <dt class="col-sm-3">Hình ảnh</dt>
                <dd class="col-sm-9">
                    <img src="@Model.ImageUrl" alt="Hình sản phẩm" class="img-thumbnail" style="max-height:150px;" />
                </dd>

                <dt class="col-sm-3">Danh mục</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Category.Name)</dd>
            </dl>

            <form asp-action="Delete">
                <input type="hidden" asp-for="Id" />
                <div class="d-flex justify-content-start gap-2">
                    <button type="submit" class="btn btn-danger">
                        <i class="bi bi-trash-fill"></i> Xóa ngay
                    </button>
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="bi bi-arrow-left"></i> Quay lại danh sách
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>
