@model Website_BanMayTinh.Models.Brand

@{
    ViewData["Title"] = "Chỉnh sửa thương hiệu";
    Layout = "~/Views/Shared/_MyLayout.cshtml";
}

<div class="container mt-5 d-flex justify-content-center">
    <div class="card shadow rounded-4 w-100" style="max-width: 600px;">
        <div class="card-header bg-warning text-dark rounded-top-4">
            <h4 class="mb-0 fw-bold"><i class="bi bi-pencil-square me-2"></i>Chỉnh sửa thương hiệu</h4>
        </div>
        <div class="card-body">
            <form asp-action="Edit">
                <input type="hidden" asp-for="Id" />
                <input type="hidden" name="page" value="@ViewBag.CurrentPage" />

                <div class="mb-3">
                    <label asp-for="Name" class="form-label fw-semibold">Tên thương hiệu</label>
                    <input asp-for="Name" class="form-control rounded" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="d-flex justify-content-end gap-2 mt-4">
                    <a asp-action="Index" class="btn btn-outline-secondary" asp-route-page="@ViewBag.CurrentPage">
                        <i class="bi bi-arrow-left"></i> Quay lại
                    </a>
                    <button type="submit" class="btn btn-warning text-dark">
                        <i class="bi bi-save"></i> Lưu thay đổi
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}


