@model List<Website_BanMayTinh.Models.CartItem>
@{
    ViewBag.Title = "Giỏ hàng";
}

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">@TempData["Error"]</div>
}
@if (TempData["Success"] != null)
{
    <div class="alert alert-success">@TempData["Success"]</div>
}

@if (!Model.Any())
{
    <div>Giỏ hàng trống.</div>
}
else
{
    <table class="table">
        <tr>
            <th>Tên sản phẩm</th>
            <th>Đơn giá (VNĐ)</th>
            <th>Số lượng</th>
            <th>Tổng (VNĐ)</th>
            <th></th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.Price.ToString("N0")</td>
                <td>
                    <form asp-action="UpdateQuantity" method="post" style="display:inline;">
                        <input type="hidden" name="productId" value="@item.Id" />
                        <input type="number" name="quantity" value="@item.Quantity" min="1" style="width:60px;" />
                        <button type="submit" class="btn btn-sm btn-primary">Cập nhật</button>
                    </form>
                </td>
                <td>@(item.Price* item.Quantity).ToString("N0")</td>
                <td>
                    <form asp-action="Remove" method="post" style="display:inline;">
                        <input type="hidden" name="id" value="@item.Id" />
                        <button type="submit" class="btn btn-sm btn-danger">Xóa</button>
                    </form>
                </td>
            </tr>
        }
    </table>
    <div class="text-end">
        <strong>Tổng tiền: @Model.Sum(i => i.Price * i.Quantity).ToString("N0") VNĐ</strong>
    </div>
    <hr />
    <form asp-action="Checkout" method="get">
        <button type="submit" class="btn btn-success">Thanh toán</button>
    </form>
}