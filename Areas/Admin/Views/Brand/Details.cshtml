@model Website_BanMayTinh.Models.Brand

@{
    ViewData["Title"] = "Chi tiết thương hiệu";
    Layout = "~/Views/Shared/_MyLayout.cshtml";
}

<div class="container mt-4">
    <div class="card shadow">
        <div class="card-header bg-info text-white">
            <h4 class="mb-0"><i class="bi bi-tag"></i> Chi tiết thương hiệu</h4>
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3 fw-bold text-end">Tên thương hiệu:</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Name)</dd>
            </dl>
        </div>
        <div class="card-footer d-flex justify-content-between">
            <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-warning" asp-route-page="@ViewBag.CurrentPage">
                <i class="bi bi-pencil-square"></i> Chỉnh sửa
            </a>
            <a asp-action="Index" class="btn btn-secondary" asp-route-page="@ViewBag.CurrentPage">
                <i class="bi bi-arrow-left"></i> Quay lại danh sách
            </a>
        </div>
    </div>
</div>
