@model List<Website_BanMayTinh.Models.Product>

@{
    ViewData["Title"] = "Danh sách sản phẩm";
}

<style>
    .card {
        width: 100%;
        max-width: 200px;
        border-radius: 10px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        overflow: hidden;
        transition: transform 0.2s ease-in-out;
    }

        .card:hover {
            transform: scale(1.05);
        }

        .card img {
            height: 150px;
            object-fit: cover;
            padding: 10px;
            background-color: #f8f9fa;
        }

    .card-body {
        display: flex;
        flex-direction: column;
        justify-content: space-between;
        height: 100%;
        padding: 10px;
        text-align: center;
    }

    .card-title {
        font-size: 14px;
        font-weight: bold;
        height: 40px; /* Giữ chiều cao cố định */
        line-height: 20px;
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
    }

    .card-text {
        font-size: 12px;
        color: #666;
        margin-bottom: 3px;
    }

    .btn-custom {
        background-color: #007bff;
        color: white;
        font-size: 14px;
        padding: 5px 10px;
        border-radius: 5px;
        display: block;
        text-align: center;
        margin-top: auto; /* Đẩy nút xuống dưới */
    }
</style>

<h2 class="text-center my-4">Danh sách Sản phẩm</h2>

<div class="row">
    @foreach (var product in Model)
    {
        <div class="col-lg-2 col-md-3 col-sm-4 col-6 mb-3">
            <div class="card h-100">
                @if (!string.IsNullOrEmpty(product.ImageUrl))
                {
                    <img src="@product.ImageUrl" class="card-img-top" alt="@product.Name">
                }
                <div class="card-body">
                    <h5 class="card-title">@product.Name</h5>
                    <p class="card-text"><strong>Loại:</strong> @product.Category?.Name</p>
                    <p class="card-text"><strong>Giá:</strong> @product.Price.ToString("#,##0") VND</p>
                    <a href="@Url.Action("Details", "PC", new { id = product.Id })" class="btn btn-custom">Chi tiết</a>
                </div>
            </div>
        </div>
    }
</div>
