@model Website_BanMayTinh.Models.Product

@{
    ViewData["Title"] = "Chi tiết sản phẩm";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-10 col-lg-8">
            <div class="card shadow-lg border-0" style="background-color: #f4f6f9;">
                <div class="row g-0">
                    <div class="col-md-5 text-center p-4">
                        <img src="@Model.ImageUrl" alt="@Model.Name" class="img-fluid rounded shadow-sm" style="max-height: 300px;" />
                    </div>
                    <div class="col-md-7 p-4">
                        <h2 class="fw-bold text-primary mb-3">@Model.Name</h2>

                        <h5 class="text-muted mb-2">Loại sản phẩm: <span class="text-dark">@Model.Category?.Name</span></h5>
                        <h4 class="text-danger fw-bold mb-3">@Model.Price.ToString("#,##0") VND</h4>

                        <h6 class="fw-bold text-secondary">Mô tả sản phẩm</h6>
                        <div class="text-dark" style="white-space: pre-line;">
                            @Html.Raw(Model.Description.Replace("\n", "<br>"))
                        </div>

                        <div class="mt-4">
                            <a href="@Url.Action("Index", "Home", new {categoryId = Model.Category?.Id})" class="btn btn-outline-primary">
                                <i class="bi bi-arrow-left"></i> Quay lại
                            </a>
                            <a href="@Url.Action("AddToCart", "Cart", new { id = Model.Id })" class="btn btn-success ms-2">
                                <i class="bi bi-cart-plus"></i> Thêm vào giỏ hàng
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
